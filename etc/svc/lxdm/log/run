#!/bin/execlineb -P

multisubstitute {
  define LOGDIR /var/log/services/lxdm
  define UID nobody
  define GID nogroup }

umask 077

# Make log directory (as root) if it doesn't already exist
foreground {
  if -n { test -d ${LOGDIR} }
    mkdir -p ${LOGDIR} }

# Set safer permissions
foreground { chown -R ${UID}:${GID} ${LOGDIR} }

# Start logger as ${UID}
s6-setuidgid ${UID}

# Keep 3 logs
# Maximum log size 1 MiB
s6-log -b n3 T s1048576 ${LOGDIR}
