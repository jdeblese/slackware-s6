#!/command/execlineb -P

multisubstitute {
  define LOGDIR /var/log/services/consolekit
  define UID nobody
  define GID nogroup }

umask 077

# Make log directory as root if it doesn't already exist
foreground { mkdir -p ${LOGDIR} }

# Set safer permissions
foreground { chown -R ${UID}:${GID} ${LOGDIR} }

# Start logger as ${UID}
s6-setuidgid ${UID}

# Keep 3 logs
# Maximum log size 1 MiB
s6-log -bt n3 s1048576 ${LOGDIR}
